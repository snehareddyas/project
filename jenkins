pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/snehareddyas/project.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm ci'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test'
            }
        }
        stage('Deploy') {
            steps {
                sh './deploy.sh'
            }
        }
    }
    post {
        success {
            slackSend(channel: '#build-status', message: '✅ Build and Deployment Successful')
        }
        failure {
            slackSend(channel: '#build-status', message: '❌ Build or Deployment Failed')
        }
    }
}
